<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.bdqn.pojo.Dept" table="DEPT" schema="SCOTT">
        <id name="deptno">
            <column name="DEPTNO" sql-type="number(2)" precision="2"/>
        </id>
        <property name="dname">
            <column name="DNAME" sql-type="varchar2(14)" length="14" not-null="true"/>
        </property>
        <property name="loc">
            <column name="LOC" sql-type="varchar2(13)" length="13" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>